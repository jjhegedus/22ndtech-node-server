    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Debug dev-prod-db",
            "program": "${workspaceRoot}\\src\\app.js",
            "env": {
                "APP_ENVIRONMENT": "dev-prod-db"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug dev",
            "program": "${workspaceRoot}/src/app.js",
            "env": {
                "APP_ENVIRONMENT": "dev"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug prod",
            "program": "${workspaceRoot}/src/app.js",
            "env": {
                "APP_ENVIRONMENT": "prod"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug external-test",
            "program": "${workspaceRoot}/src/app.js",
            "env": {
                "APP_ENVIRONMENT": "external-test"
            }
        }
    ]
}